@model IEnumerable<GameRev.Models.GoalModel>

@{
    ViewBag.Title = "Obiettivi";
}

<h2>Obiettivi</h2>

<p>
    <a class="btn btn-default" href="@Url.Action("Create", "Goals")"
       data-toggle="tooltip" title="Create">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</p>
<div class="panel panel-default>
    <div class="panel-body">
        @foreach (GameRev.Models.GoalModel item in Model)
        {

            <div>
                <div class="card col-xs-6 col-md-3 thumbnail" style="width: 18rem; margin:25px;padding:10px;min-width:150px;min-height:280px;">
                    @*<a class="btn btn-default" href="#"
                           data-toggle="tooltip" title="Edit">
                            <span class="glyphicon glyphicon glyphicon-flag card-img-top" aria-hidden="true"></span>
                        </a>*@


                    <img class="card-img-top" style="max-height:100px;max-width:100px;" src="https://cdn3.iconfinder.com/data/icons/block/32/trophy-512.png" alt="Card image cap">
                    <div class="card-body">
                        @*<h5 class="card-title">@item.NAME</h5>*@
                        <h5 class="card-title"><strong>@item.DESCR</strong></h5>
                        <p class="card-text">

                            @GameRev.Models.GoalModel.DecodeNotificationTypeDescr(item)<br>

                            @foreach (GameRev.Models.GoalRuleModel rule in item.RULES)
                            {
                                <a class="glyphicon glyphicon glyphicon-star"></a>
                            }

                        </p>
                        <div >
                            <a class="btn btn-default" href="@Url.Action("Edit", "Goals", new { id = item.ID })"
                               data-toggle="tooltip" title="Edit">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-default" href="@Url.Action("Delete", "Goals", new { id = item.ID })"
                               data-toggle="tooltip" title="Delete">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        }

    </div>
</div>